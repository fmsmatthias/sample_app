<h2><strong>Listing seasons</h2></strong>

<table>
  <tr>
    <th>Season</th>
    <th>Langu</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @seasons.each do |season| %>
  <tr>
    <td><%= season.season %></td>
    <td><%= season.langu %></td>
    <td><%= season.text %></td>
    <td><%= link_to 'Show', season %></td>
    <td><%= link_to 'Edit', edit_season_path(season) %></td>
    <td><%= link_to 'Destroy', season, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

