<%= provide(:title, 'All users') %>

<h2><strong>Users</h2></strong>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 52 %>
      <%= link_to user.name, user %>
      <%= link_to "Delete", user, method: :delete, data:{ confirm: "Are you sure?"}  %>
    </li>
  <% end %>
</ul>
