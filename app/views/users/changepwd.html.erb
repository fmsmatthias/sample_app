
<%= provide(:title, 'Change your Password') %>
<br>
<h2><strong>Change Password for 
<%= @user.name %>
</h2></strong>
<br>
<br>
<div class="row" align="center">
  <div id="containerform">   
    <%= form_for(:changepwd, :url => { :action => "changepwdupd" })  do |f| %>
                
          <% flash.each do |key, value| %>
            <div class="alert alert-error">
              <%= content_tag(:div, value, :class => "flash #{key}") %>
            </div>
          <% end %>


      <%= f.label :password, "Old Password" %>
      <%= f.password_field :password %>
<br>
      <%= f.label :new_password, "New Password" %>
      <%= f.password_field :new_password %>
<br>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
<br>

      <%= f.submit "Save Changes", class: "btn  btn-info" %>
      <%= link_to 'Back', @user %>
    <% end %>
  </div>
</div>


