    <h3>Your booking Details:</h3>
    <br>  
    <% if @booking.nil? %>
      <p>No Booking Details Available</p>
      <br><br><br>
    <% else %>
       <div class="row">
         <div class="span2">
           <p><strong>Arrival:</strong></p>
         </div>
         <div class="span2">
           <p><%= @booking.adate %> </p> 
         </div>
         <div class="span2">
           <p><strong>Departure:</strong></p>
         </div>
         <div class="span2">
           <p><%= @booking.ddate %> </p>
         </div>
       </div> <!--row -->

       <div class="row">
         <div class="span2">
           <p><strong>No. Nights:</strong></p>
         </div>
         <div class="span2">
           <p><%= @booking.nights %> </p> 
         </div>
         <div class="span2">
           <p><strong>No. People:</strong></p>
         </div>
         <div class="span2">
           <p><%= @booking.people %> </p>
         </div>
       </div> <!--row -->

       <div class="row">
         <div class="span2">
           <p><strong>Total Price:</strong></p>
         </div>
         <div class="span2">
           <p><%= @booking.price %> </p> 
         </div>
         <div class="span2">
           <p><strong>Downpayment:</strong></p>
         </div>
         <div class="span2">
           <p><%= @booking.downp %> </p>
         </div>
       </div> <!--row -->

       <div class="row">
         <div class="span2">
           <p><strong>Final Cleaning:</strong></p>
         </div>
         <div class="span2">
           <p><%= @booking.cleaning %> </p> 
         </div>
       </div> <!--row -->

    <% end %>

    <% if is_admin? %>
       <%= link_to "New Booking", new_user_booking_path(@user) , class: "btn btn btn-info" %>
       <%= link_to "Change Booking", edit_user_booking_path(@user) , class: "btn btn btn-info" %>       
    <% end %>
    <%= link_to "All Bookings", user_bookings_path(@user) , class: "btn btn btn-info" %> 

