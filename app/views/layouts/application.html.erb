<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= stylesheet_link_tag    "application", media:"all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>    
  </head>

  <body>

    <div class="container">
      <%= render 'layouts/header' %>
      <div class="boxhead"></div>
      <section class="round">
      <div class="hero-unit">
          <%= yield %>
      </div>
      </section>
    </div>
      <%= render 'layouts/footer' %>

      <%= debug(params) if Rails.env.development? %>
    
  </body>
</html>
